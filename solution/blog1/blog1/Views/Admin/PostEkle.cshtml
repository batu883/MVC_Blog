
@{
    ViewBag.Title = "PostEkle";
    Layout = "~/Views/Shared/adminl.cshtml";
}

<h2>PostEkle</h2>



<div class="container" style="padding-left:300px;padding-top:25px">
    <h1>Post Ekle</h1>

    <form action="/Admin/PostEkle" method="post" class="form-group">

        <label style="margin-bottom:5px; margin-top:10px;">Başlık Girin: </label>
        <br />
        <input type="text" name="Başlık" />
        <br />
        <label style="margin-bottom:5px; margin-top:10px;">YazarID girin: </label>
        <br />
        <input type="text" name="YazarID" />
        <br />
        <label style="margin-bottom:5px; margin-top:10px;">KategoriID girin:  </label>
        <br />
        <input type="text" name="KategoriID" />
        <br />
        <label style="margin-bottom:5px; margin-top:10px;">Tarihi Girin: </label>
        <br />
        <input type="date" name="Tarih" />
        <br />
        <input type="hidden" value="0" name="Goruntulenme" />

        <label style="margin-bottom:5px; margin-top:10px;">Foto Path girin: </label>
        <br />
        <input type="text" name="Foto" />
        <br />
        <label style="margin-bottom:5px; margin-top:10px;">Ozet Girin: </label>
        <div style="margin-bottom:5px; margin-top:15px;">
            <textarea class="form-control col-md-5" rows="2" name="İçerikÖzet">    </textarea>
        </div>
        <label style="margin-bottom:5px; margin-top:10px;">İçeriği Girin: </label>
        <div style="margin-bottom:5px; margin-top:15px;">
            <textarea class="form-control col-md-5" rows="4" name="İçerik">    </textarea>
        </div>
        <input type="submit" style="margin:5px;" class="btn btn-outline-primary  " value="Gönder" />

    </form>
</div>




